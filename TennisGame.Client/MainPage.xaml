<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Tennis Game"
             x:Class="TennisGame.Client.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Spacing="5"
            Padding="30,0"
            VerticalOptions="Center">

            <Label
                x:Name="NameLabel"
                Text=""
                FontSize="24"
                Margin="0,0,0,50"
                HorizontalOptions="Center" />

            <Label
                Text="Your skill is:"
                FontSize="18"
                HorizontalOptions="Center" />

            <Label
                x:Name="SkillLabel"
                Text=""
                FontSize="32"
                Margin="0,0,0,50"
                HorizontalOptions="Center" />

            <Label
                Text="Add a match outcome:"
                FontSize="18"
                HorizontalOptions="Center" />

            <Button
                Text="Single"
                Clicked="OnAddSingleGameClicked"
                HorizontalOptions="Fill" />

            <Button
                Text="Double"
                Clicked="OnAddDoubleGameClicked"
                HorizontalOptions="Fill" />

        </VerticalStackLayout>

    </ScrollView>

</ContentPage>
